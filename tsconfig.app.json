  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "./",  
    "module": "es2015", 
    "types": []
  },
  "angularCompilerOptions": {  
    "fullTemplateTypeCheck": true  
 },  
 "exclude": [  
